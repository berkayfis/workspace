
@{
    ViewData["Title"] = "Index";
}


<form>
    <div class="form-group">
        <label for="file">Filename:</label>
        <input type="file" name="file" id="file" />
    </div>
    <div class="form-group">
        <button type="button" class="btn btn-outline-success" onclick="showAll()">Show All</button>
    </div>
</form>

<form action="" method="post" enctype="multipart/form-data">

    <label for="file">Filename:</label>
    <input type="file" name="file" id="file" />

    <input type="submit" />
</form>


<script>
    function showAll() {
        var fullPath = $('input[type=file]').val();

        var actionUrl = '@Url.Action("All","Entries",new { filePath =  "1" })';
        actionUrl = actionUrl.replace("1", fullPath);

        $.ajax({
            url: actionUrl,
            type: 'POST',
            dataType: 'json',
            contentType: 'application/json; charset=utf-8',
            success: function (result) {
                console.log(result);
            },
            error: function (xhr) {
                alert('Error: ' + xhr.statusText);
            },
        });
    }

</script>