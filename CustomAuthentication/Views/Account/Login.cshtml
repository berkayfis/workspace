
@{
    ViewData["Title"] = "Login";
}

@model CustomAuthentication.Models.UserModel

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h2><strong>Login Page </strong></h2><br />
            <form asp-action="login" method="post">
                <div class="form-group">
                    <label>User Name</label>
                    <input asp-for="UserName" type="text" class="form-control" id="userName" name="userName" placeholder="Enter user name">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input asp-for="Password" type="password" class="form-control" name="password" id="password" placeholder="Password">
                </div>
                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div class="alert alert-warning">
                        <label>@ViewBag.ErrorMessage</label>
                    </div>
                }                
                <div class="form-check">
                    <button class="btn btn-info col-4" type="reset">Reset</button>
                    <button type="submit" class="btn btn-primary col-4">Submit</button>
                    <input type="button" class="btn btn-primary col-4" value="Register" onclick="window.location.href='@Url.Action("Register", "Register")'" />
                </div>
            </form>
        </div>
    </div>
</div>  