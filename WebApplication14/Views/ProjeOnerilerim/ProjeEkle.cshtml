	else
	{
		<div class="block-content-outer">
			<div class="block-content-inner">
				<form action="/ProjeOnerilerim/ProjeEkle" method="post" role="form">
					<div class="block-heading">
						<div class="main-text h2">
							Proje Önerisi Ekleme Sayfası
						</div>
					</div>
					<div class="form-group">
						<label for="exampleInputEmail1">Proje İsmi</label>
						<input type="text" class="form-control" id="exampleInputEmail1" placeholder="Proje ismini giriniz" name="Isim" required>
					</div>
					<div class="form-group">
						<label for="exampleInputEmail1">Proje Türü</label>
						<select class="form-control" name="Kategori" required>
							<option value="Bilgisayar(Ara) Proje">
								Bilgisayar(Ara) Proje
							</option>
							<option value="Bitirme Projesi">
								Bitirme Projesi
							</option>
						</select>
					</div>
					<div class="form-group">
						<label for="exampleInputEmail1">Alan Oturumu</label>
						<select class="form-control" name="OturumNo" required>
							@foreach (AlanOturum oturum in ViewBag.oturumlar)
							{
								<option value="@oturum.Id">
									@oturum.Adi
								</option>
							}
						</select>
					</div>
					<div class="col-lg-2">
						<label>Kişi Sayısı</label>
						<input type="number" class="form-control" placeholder="Kişi sayısı" name="KisiSayisi" min="1" max="2" required>
					</div>
					<div class="col-lg-2">
						<label for="exampleInputEmail1">Grup Sayısı</label>
						<input type="number" class="form-control" placeholder="Grup sayısı" name="GrupSayisi" min="1" max="3" required>
					</div>

					<div class="form-group">
						Form-1'i seçiniz : <input type="file" name="Form1" required>
					</div>

					<button type="submit" class="btn btn-primary">Kaydet</button>
				</form>
			</div>
		</div>
	}
}
<script>
	function check() {
		if (document.getElementById("evetHayır").nodeValue == "Evet") {
			return true;
		}
		else {
			return false;
		}
	}
</script>