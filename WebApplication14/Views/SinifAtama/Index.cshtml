
@{
    ViewData["Title"] = "Final Sınav Programı";
}

@if (ViewBag.ErrorMessage != null)
{
    <div>
        <h3>
            @ViewBag.ErrorMessage
        </h3>
    </div>
}
else
{
    <div class="row">
        <div class="col-lg-12">
            <!-- USER DATA-->
            <div class="user-data m-b-30">
                <h3 class="title-3 m-b-30">
                    <i class="zmdi zmdi-library"></i>Ara Proje Final Takvimi Planlaması
                </h3>
                <div class="table-responsive table-data">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Sınıflar</th>
                                <th>Saat</th>
                                <th>Danışman</th>
                                <th>Proje İsmi</th>
                                <th>Ogrenci 1</th>
                                <th>Ogrenci 2</th>
                                <th>Akademisyen 1</th>
                                <th>Akademisyen 2</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (FinalSinav finalExam in ViewBag.araProjeler)
                            {
                                <tr>
                                    <td>@finalExam.Sinif</td>
                                    <td>@finalExam.Seans</td>
                                    <td>@finalExam.akademisyenKisaltma1</td>
                                    <td>@finalExam.projeAdı</td>
                                    <td>@finalExam.ogrNo1</td>
                                    <td>@finalExam.ogrNo2</td>
                                    <td>@finalExam.akademisyenKisaltma2</td>
                                    <td>@finalExam.akademisyenKisaltma3</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- END USER DATA-->
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <!-- USER DATA-->
            <div class="user-data m-b-30">
                <h3 class="title-3 m-b-30">
                    <i class="zmdi zmdi-library"></i>Bitirme Proje Final Takvimi Planlaması
                </h3>
                <div class="table-responsive table-data">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Sınıflar</th>
                                <th>Saat</th>
                                <th>Danışman</th>
                                <th>Proje İsmi</th>
                                <th>Ogrenci 1</th>
                                <th>Ogrenci 2</th>
                                <th>Akademisyen 1</th>
                                <th>Akademisyen 2</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (FinalSinav finalExam in ViewBag.bitirmeProjeler)
                            {
                                <tr>
                                    <td>@finalExam.Sinif</td>
                                    <td>@finalExam.Seans</td>
                                    <td>@finalExam.akademisyenKisaltma1</td>
                                    <td>@finalExam.projeAdı</td>
                                    <td>@finalExam.ogrNo1</td>
                                    <td>@finalExam.ogrNo2</td>
                                    <td>@finalExam.akademisyenKisaltma2</td>
                                    <td>@finalExam.akademisyenKisaltma3</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- END USER DATA-->
        </div>
    </div>
}
