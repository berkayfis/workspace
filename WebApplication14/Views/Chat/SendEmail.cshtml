
@{
	ViewData["Title"] = "Send Email";
}
@using (Html.BeginForm("SendEmail", "Chat", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
	<div class="row">
		<div class="col-md-12">
			<div class="block">
				<div class="block-heading">
					<div class="main-text h2">
						Mail Gönderme Sayfası
					</div>
				</div>
				<div class="block-content-outer">
					<div class="block-content-inner">
						<form action="/Chat/SendEmail" method="post" role="form">
							<div class="form-group">
								<label for="exampleInputEmail1">Mail Başlığı</label>
								<input type="text" class="form-control" placeholder="Mail konusunu giriniz" name="Baslik">
							</div>
							<div class="form-group">
								<textarea name="İcerik" id="" cols="30" rows="7" class="form-control" placeholder="Mail İçeriğini Giriniz" style="margin-top: 0px; margin-bottom: 0px; height: 181px;"></textarea>
							</div>
							<div class="form-group">
								<label>Eklenti</label><br><br>
								<input type="file" name="Eklenti">
							</div>
							<button type="submit" class="btn btn-primary">Kaydet</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
}


